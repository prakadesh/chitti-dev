<UserControl x:Class="Chitti.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource PrimaryText}" 
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- API Key -->
                <Border Background="{StaticResource CardBackground}" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Gemini API Key" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource PrimaryText}" 
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Enter your Gemini API key to enable AI-powered text enhancement."
                                 Foreground="{StaticResource SecondaryText}"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,10"/>
                        <PasswordBox x:Name="ApiKeyBox"
                                   Padding="8"
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>

                <!-- Clipboard Monitoring -->
                <Border Background="{StaticResource CardBackground}" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Clipboard Monitoring" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource PrimaryText}" 
                                 Margin="0,0,0,10"/>
                        <CheckBox x:Name="EnableMonitoringCheckBox"
                                Content="Enable clipboard monitoring"
                                IsChecked="True"
                                Margin="0,0,0,10"/>
                        <TextBlock Text="The application will monitor your clipboard for text with supported tags."
                                 TextWrapping="Wrap"
                                 Foreground="{StaticResource SecondaryText}"/>
                    </StackPanel>
                </Border>
                
                

                <!-- API Settings -->
                <Border Background="{StaticResource CardBackground}" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="API Settings" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource PrimaryText}" 
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="API Request Timeout (seconds):"
                                 Foreground="{StaticResource PrimaryText}"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="TimeoutBox"
                                Text="30"
                                Width="100"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Notifications -->
                <Border Background="{StaticResource CardBackground}" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Notifications" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource PrimaryText}" 
                                 Margin="0,0,0,10"/>
                        <CheckBox x:Name="DetailedNotificationsCheckBox"
                                Content="Show detailed notifications"
                                IsChecked="True"
                                Margin="0,0,0,10"/>
                        <TextBlock Text="When enabled, you'll see more detailed information about the text processing status."
                                 TextWrapping="Wrap"
                                 Foreground="{StaticResource SecondaryText}"/>
                    </StackPanel>
                </Border>

                <!-- Chat Window Hotkey -->
                <Border Background="{StaticResource CardBackground}" 
        CornerRadius="10" 
        Padding="20"
        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Chat Window Hotkey" 
                  FontSize="18" 
                  FontWeight="SemiBold" 
                  Foreground="{StaticResource PrimaryText}" 
                  Margin="0,0,0,10"/>
                        <StackPanel>
                            <Button x:Name="SetHotkeyButton"
                    Content="Set HotKey"
                    Background="{StaticResource SuccessGreen}"
                    Foreground="White"
                    Click="SetHotkeyButton_Click"
                    HorizontalAlignment="Left"
                    Padding="15,8"/>
                            <TextBlock x:Name="CurrentHotkeyText"
                      Text="Current: Not Set"
                      Margin="0,5,0,0"
                      Foreground="{StaticResource SecondaryText}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>




                <!-- Data Management -->
                <Border Background="{StaticResource CardBackground}" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Data Management" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource PrimaryText}" 
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Manage your application data and history."
                                 TextWrapping="Wrap"
                                 Foreground="{StaticResource SecondaryText}"
                                 Margin="0,0,0,10"/>
                        <Button x:Name="ClearDataButton"
                                Content="Clear All Data"
                                Background="{StaticResource AccentRed}"
                                Foreground="White"
                                Click="ClearDataButton_Click"
                                HorizontalAlignment="Left"
                                Padding="15,8"/>
                        <TextBlock Text="This will delete all clipboard history and reset the application to its initial state. Your API key will be preserved."
                                 TextWrapping="Wrap"
                                 Foreground="{StaticResource SecondaryText}"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Save Button -->
                <Button Content="Save Settings" 
                        Background="{StaticResource AccentBlue}"
                        Click="SaveButton_Click"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 